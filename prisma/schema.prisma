generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String             @id @default(cuid())
  name                 String?
  email                String?            @unique
  emailVerified        DateTime?
  image                String?
  autoCheckinEnabled   Boolean            @default(true)
  notificationsEnabled Boolean            @default(true)
  onboardingCompleted  Boolean            @default(false)
  totalPoints          Int                @default(0)
  level                Int                @default(1)
  accounts             Account[]
  barRatings           BarRating[]
  paidDrinks           Drink[]            @relation("DrinkPayer")
  drinks               Drink[]
  sentInvitations      Invitation[]       @relation("InvitationsSent")
  receivedInvitations  Invitation[]       @relation("InvitationsReceived")
  messages             Message[]
  sentNudges           Nudge[]            @relation("NudgeSender")
  receivedNudges       Nudge[]            @relation("NudgeTarget")
  participations       Participant[]
  photos               Photo[]
  potTransactions      PotTransaction[]
  pushSubscriptions    PushSubscription[]
  rounds               Round[]
  createdRoutes        Route[]            @relation("RouteCreator")
  routeRatings         RouteRating[]
  sessions             Session[]
  skipVotes            SkipVote[]
  badges               UserBadge[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Route {
  id                 String            @id @default(cuid())
  name               String
  date               DateTime?
  createdAt          DateTime          @default(now())
  actualEndTime      DateTime?
  actualStartTime    DateTime?
  creatorId          String?
  description        String?
  endTime            DateTime?
  hasEndTime         Boolean           @default(false)
  inviteCode         String?           @unique
  isPublic           Boolean           @default(false)
  isTemplate         Boolean           @default(false)
  originalRouteId    String?
  potAmountPerPerson Float?
  potEnabled         Boolean           @default(false)
  potTotalCollected  Float             @default(0)
  potTotalSpent      Float             @default(0)
  requiresApproval   Boolean           @default(false)
  startMode          String            @default("manual")
  startTime          DateTime?
  status             String            @default("pending")
  templateId         String?
  isDiscovery        Boolean           @default(false)
  barRatings         BarRating[]
  drinks             Drink[]
  invitations        Invitation[]
  messages           Message[]
  nudges             Nudge[]
  participants       Participant[]
  photos             Photo[]
  potContributions   PotContribution[]
  potTransactions    PotTransaction[]
  creator            User?             @relation("RouteCreator", fields: [creatorId], references: [id])
  originalRoute      Route?            @relation("RouteClones", fields: [originalRouteId], references: [id])
  clones             Route[]           @relation("RouteClones")
  template           Route?            @relation("RouteEditions", fields: [templateId], references: [id], onDelete: Cascade)
  editions           Route[]           @relation("RouteEditions")
  ratings            RouteRating[]
  stops              RouteStop[]
  skipVotes          SkipVote[]
  earnedBadges       UserBadge[]

  @@index([creatorId])
  @@index([status, date(sort: Desc)])
  @@index([date(sort: Desc)])
}

model RouteStop {
  id             String      @id @default(cuid())
  routeId        String
  name           String
  address        String
  lat            Float
  lng            Float
  order          Int
  plannedRounds  Int
  maxRounds      Int?
  actualRounds   Int         @default(0)
  googlePlaceId  String?
  arrivedAt      DateTime?
  departedAt     DateTime?
  stayDuration   Int         @default(30)
  walkTimeToNext Int?
  beerPrice      Float?      // Precio de la cerveza en este bar
  ratings        BarRating[]
  drinks         Drink[]
  photos         Photo[]
  rounds         Round[]
  route          Route       @relation(fields: [routeId], references: [id], onDelete: Cascade)
  skipVotes      SkipVote[]

  @@index([routeId, order])
}

model Participant {
  id         String    @id @default(cuid())
  routeId    String
  userId     String?
  guestId    String?
  name       String?
  avatar     String?
  joinedAt   DateTime  @default(now())
  isActive   Boolean   @default(true)
  lastLat    Float?
  lastLng    Float?
  lastSeenAt DateTime?
  route      Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([routeId, userId])
  @@unique([routeId, guestId])
  @@index([routeId, isActive])
  @@index([routeId, lastSeenAt])
}

model Round {
  id          String    @id @default(cuid())
  stopId      String
  userId      String
  orderedAt   DateTime  @default(now())
  description String?
  stop        RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Photo {
  id        String     @id @default(cuid())
  routeId   String
  stopId    String?
  userId    String?
  url       String
  caption   String?
  createdAt DateTime   @default(now())
  guestId   String?
  route     Route      @relation(fields: [routeId], references: [id], onDelete: Cascade)
  stop      RouteStop? @relation(fields: [stopId], references: [id])
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([routeId, createdAt(sort: Desc)])
  @@index([guestId])
}

model Nudge {
  id            String   @id @default(cuid())
  routeId       String
  senderId      String?
  senderGuestId String?
  message       String   @default("Â¡Date prisa, te estamos esperando!")
  targetUserId  String?
  targetGuestId String?
  createdAt     DateTime @default(now())
  route         Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  sender        User?    @relation("NudgeSender", fields: [senderId], references: [id], onDelete: Cascade)
  targetUser    User?    @relation("NudgeTarget", fields: [targetUserId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  routeId   String
  userId    String?
  guestId   String?
  content   String
  createdAt DateTime @default(now())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([routeId, createdAt(sort: Desc)])
}

model SkipVote {
  id        String    @id @default(cuid())
  routeId   String
  stopId    String
  userId    String
  vote      Boolean
  createdAt DateTime  @default(now())
  route     Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  stop      RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([routeId, stopId, userId])
}

model Drink {
  id        String    @id @default(cuid())
  routeId   String
  stopId    String
  userId    String?
  guestId   String?
  type      String    @default("beer")
  paidById  String?
  createdAt DateTime  @default(now())
  paidBy    User?     @relation("DrinkPayer", fields: [paidById], references: [id])
  route     Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  stop      RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([routeId, createdAt])
  @@index([routeId, userId])
  @@index([routeId, stopId])
}

model BarRating {
  id        String    @id @default(cuid())
  routeId   String
  stopId    String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime  @default(now())
  route     Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  stop      RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([routeId, stopId, userId])
}

model RouteRating {
  id        String   @id @default(cuid())
  routeId   String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([routeId, userId])
  @@index([routeId])
}

model Badge {
  id          String      @id @default(cuid())
  code        String      @unique
  name        String
  description String
  icon        String
  createdAt   DateTime    @default(now())
  userBadges  UserBadge[]
}

model UserBadge {
  id       String   @id @default(cuid())
  userId   String
  badgeId  String
  routeId  String?
  earnedAt DateTime @default(now())
  badge    Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  route    Route?   @relation(fields: [routeId], references: [id])
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
}

model Invitation {
  id            String    @id @default(cuid())
  routeId       String
  invitedById   String
  invitedUserId String?
  invitedEmail  String?
  status        String    @default("pending")
  message       String?
  createdAt     DateTime  @default(now())
  respondedAt   DateTime?
  expiresAt     DateTime?
  invitedBy     User      @relation("InvitationsSent", fields: [invitedById], references: [id], onDelete: Cascade)
  invitedUser   User?     @relation("InvitationsReceived", fields: [invitedUserId], references: [id], onDelete: Cascade)
  route         Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@unique([routeId, invitedUserId])
  @@unique([routeId, invitedEmail])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PotContribution {
  id       String   @id @default(cuid())
  routeId  String
  userId   String?
  userName String?
  amount   Float
  paidAt   DateTime @default(now())
  route    Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@unique([routeId, userId])
}

model PotTransaction {
  id               String   @id @default(cuid())
  routeId          String
  amount           Float
  description      String?
  createdAt        DateTime @default(now())
  registeredById   String?
  registeredByName String?
  registeredBy     User?    @relation(fields: [registeredById], references: [id])
  route            Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@index([routeId, createdAt(sort: Desc)])
  @@index([registeredById])
}

model RateLimit {
  id      String   @id
  count   Int      @default(1)
  resetAt DateTime

  @@index([resetAt])
}
