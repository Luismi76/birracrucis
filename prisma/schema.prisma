generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH (NextAuth) ====================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Relaciones con la app
  createdRoutes  Route[]       @relation("RouteCreator")
  participations Participant[]
  rounds         Round[]
  photos         Photo[]
  messages       Message[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== APP MODELS ====================

model Route {
  id           String        @id @default(cuid())
  name         String
  date         DateTime
  createdAt    DateTime      @default(now())
  inviteCode   String?       @unique

  // Creador de la ruta (opcional para rutas existentes)
  creatorId    String?
  creator      User?         @relation("RouteCreator", fields: [creatorId], references: [id])

  // Relaciones
  stops        RouteStop[]
  participants Participant[]
  photos       Photo[]
  messages     Message[]
}

model RouteStop {
  id            String   @id @default(cuid())
  route         Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId       String
  name          String
  address       String
  lat           Float
  lng           Float
  order         Int
  plannedRounds Int
  maxRounds     Int?
  actualRounds  Int      @default(0)
  googlePlaceId String?

  // Relaciones
  rounds        Round[]
}

model Participant {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  joinedAt  DateTime @default(now())
  isActive  Boolean  @default(true)

  // Ubicación en tiempo real (se actualiza periódicamente)
  lastLat   Float?
  lastLng   Float?
  lastSeenAt DateTime?

  @@unique([routeId, userId])
}

model Round {
  id          String    @id @default(cuid())
  stop        RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  stopId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  orderedAt   DateTime  @default(now())
  description String?   // Ej: "Cerveza", "Tapa", etc.
}

model Photo {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  url       String
  caption   String?
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  content   String
  createdAt DateTime @default(now())
}
