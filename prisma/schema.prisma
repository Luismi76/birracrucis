generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH (NextAuth) ====================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Configuracion del usuario
  autoCheckinEnabled    Boolean @default(true)
  notificationsEnabled  Boolean @default(true)
  onboardingCompleted   Boolean @default(false)

  // Relaciones con la app
  createdRoutes  Route[]       @relation("RouteCreator")
  participations Participant[]
  rounds         Round[]
  photos         Photo[]
  messages       Message[]
  sentNudges     Nudge[]       @relation("NudgeSender")
  receivedNudges Nudge[]       @relation("NudgeTarget")
  skipVotes      SkipVote[]
  drinks         Drink[]
  paidDrinks     Drink[]       @relation("DrinkPayer")
  barRatings     BarRating[]
  routeRatings   RouteRating[]
  badges         UserBadge[]

  // Invitaciones
  sentInvitations     Invitation[] @relation("InvitationsSent")
  receivedInvitations Invitation[] @relation("InvitationsReceived")

  // Push notifications
  pushSubscriptions PushSubscription[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== APP MODELS ====================

model Route {
  id           String        @id @default(cuid())
  name         String
  date         DateTime
  createdAt    DateTime      @default(now())
  inviteCode   String?       @unique

  // Configuración de tiempo
  startMode    String        @default("manual") // "manual" | "scheduled" | "all_present"
  startTime    DateTime?     // Hora programada de inicio (si startMode = "scheduled")
  endTime      DateTime?     // Hora límite de fin (ej: reserva en restaurante)
  hasEndTime   Boolean       @default(false)    // Si hay hora de fin obligatoria

  // Estado de la ruta
  status       String        @default("pending") // "pending" | "active" | "completed"
  actualStartTime DateTime?  // Cuando realmente empezó
  actualEndTime   DateTime?  // Cuando realmente terminó

  // Comunidad y Clonación
  isPublic        Boolean       @default(false)     // Visible para la comunidad
  description     String?       // Descripción opcional
  originalRouteId String?       // ID de la ruta original si fue clonada
  originalRoute   Route?        @relation("RouteClones", fields: [originalRouteId], references: [id])
  clones          Route[]       @relation("RouteClones") // Rutas clonadas de esta

  // Creador de la ruta (opcional para rutas existentes)
  creatorId    String?
  creator      User?         @relation("RouteCreator", fields: [creatorId], references: [id])

  // Configuracion de acceso
  requiresApproval Boolean @default(false) // Si requiere aprobacion del creador

  // Sistema de bote comun
  potEnabled       Boolean @default(false)  // Si el bote esta activado
  potAmountPerPerson Float? // Cantidad que pone cada persona
  potTotalCollected Float   @default(0)     // Total recaudado
  potTotalSpent     Float   @default(0)     // Total gastado del bote

  // Relaciones
  stops        RouteStop[]
  potContributions PotContribution[]
  participants Participant[]
  photos       Photo[]
  messages     Message[]
  nudges       Nudge[]
  skipVotes    SkipVote[]
  drinks       Drink[]
  barRatings   BarRating[]
  earnedBadges UserBadge[]
  invitations  Invitation[]
  ratings      RouteRating[]

  @@index([creatorId]) // Para listar rutas por creador
  @@index([status, date(sort: Desc)]) // Para listar rutas por estado
  @@index([date(sort: Desc)]) // Para listar rutas ordenadas por fecha
}

model RouteStop {
  id            String   @id @default(cuid())
  route         Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId       String
  name          String
  address       String
  lat           Float
  lng           Float
  order         Int
  plannedRounds Int
  maxRounds     Int?
  actualRounds  Int      @default(0)
  googlePlaceId String?

  // Tiempo de estancia estimado en minutos (por defecto 30 min por bar)
  stayDuration  Int      @default(30)

  // Tiempo de caminata al siguiente bar en minutos (calculado)
  walkTimeToNext Int?

  // Hora real de llegada y salida
  arrivedAt     DateTime?
  departedAt    DateTime?

  // Relaciones
  rounds        Round[]
  photos        Photo[]
  skipVotes     SkipVote[]
  drinks        Drink[]
  ratings       BarRating[]

  @@index([routeId, order]) // Para ordenar stops de una ruta
}

model Participant {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
  guestId   String?  // ID generado para invitados
  name      String?  // Nombre para invitados (o override para users)
  avatar    String?  // Avatar para invitados

  joinedAt  DateTime @default(now())
  isActive  Boolean  @default(true)

  // Ubicación en tiempo real (se actualiza periódicamente)
  lastLat   Float?
  lastLng   Float?
  lastSeenAt DateTime?

  @@unique([routeId, userId])
  @@unique([routeId, guestId]) // Un invitado solo puede estar una vez por ruta
  @@index([routeId, isActive])
  @@index([routeId, lastSeenAt])
}

model Round {
  id          String    @id @default(cuid())
  stop        RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  stopId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  orderedAt   DateTime  @default(now())
  description String?   // Ej: "Cerveza", "Tapa", etc.
}

model Photo {
  id        String     @id @default(cuid())
  route     Route      @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  stop      RouteStop? @relation(fields: [stopId], references: [id], onDelete: SetNull)
  stopId    String?
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  url       String     // URL de la imagen (base64 o cloudinary)
  caption   String?
  createdAt DateTime   @default(now())

  @@index([routeId, createdAt(sort: Desc)]) // Para cargar fotos recientes
}

// Modelo para "meter prisa" a los rezagados
model Nudge {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  sender    User?    @relation("NudgeSender", fields: [senderId], references: [id], onDelete: Cascade)
  senderId  String?
  senderGuestId String?
  message       String   @default("¡Date prisa, te estamos esperando!")
  targetUserId  String?
  targetGuestId String?
  targetUser    User?    @relation("NudgeTarget", fields: [targetUserId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
  guestId   String?  // Para mensajes de invitados
  content   String
  createdAt DateTime @default(now())

  @@index([routeId, createdAt(sort: Desc)]) // Para cargar mensajes recientes
}

// Votación para saltarse un bar
model SkipVote {
  id        String    @id @default(cuid())
  route     Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  stop      RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  stopId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  vote      Boolean   // true = saltar, false = quedarse
  createdAt DateTime  @default(now())

  @@unique([routeId, stopId, userId])
}

// Contador de bebidas por usuario
model Drink {
  id          String    @id @default(cuid())
  route       Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId     String
  stop        RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  stopId      String
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String?
  guestId     String?
  type        String    @default("beer") // beer, wine, cocktail, soft, other
  paidBy      User?     @relation("DrinkPayer", fields: [paidById], references: [id])
  paidById    String?
  createdAt   DateTime  @default(now())

  @@index([routeId, createdAt]) // Para listar bebidas de una ruta
  @@index([routeId, userId]) // Para estadísticas por usuario
  @@index([routeId, stopId]) // Para estadísticas por bar
}

// Valoración de bares visitados
model BarRating {
  id            String    @id @default(cuid())
  route         Route     @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId       String
  stop          RouteStop @relation(fields: [stopId], references: [id], onDelete: Cascade)
  stopId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  rating        Int       // 1-5 estrellas
  comment       String?
  createdAt     DateTime  @default(now())

  @@unique([routeId, stopId, userId])
}

// Valoración de Rutas Públicas
model RouteRating {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  rating    Int      // 1-5 estrellas
  comment   String?  // Comentario opcional
  createdAt DateTime @default(now())

  @@unique([routeId, userId]) // Una valoración por usuario y ruta
  @@index([routeId]) // Para calcular promedios rápido
}

// Logros/Badges del usuario
model Badge {
  id          String   @id @default(cuid())
  code        String   @unique // first_route, marathon, punctual, photographer, etc.
  name        String
  description String
  icon        String   // emoji o URL
  createdAt   DateTime @default(now())

  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  badgeId   String
  route     Route?   @relation(fields: [routeId], references: [id])
  routeId   String?  // Ruta donde se ganó el badge (opcional)
  earnedAt  DateTime @default(now())

  @@unique([userId, badgeId])
}

// Invitaciones a rutas
model Invitation {
  id          String   @id @default(cuid())
  route       Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId     String

  // Quien invita
  invitedBy   User     @relation("InvitationsSent", fields: [invitedById], references: [id], onDelete: Cascade)
  invitedById String

  // Invitado (puede ser por email o usuario existente)
  invitedUser   User?    @relation("InvitationsReceived", fields: [invitedUserId], references: [id], onDelete: Cascade)
  invitedUserId String?
  invitedEmail  String?  // Si el usuario no existe todavia

  // Estado: pending, accepted, rejected, expired
  status      String   @default("pending")

  // Mensaje opcional del que invita
  message     String?

  createdAt   DateTime @default(now())
  respondedAt DateTime?
  expiresAt   DateTime? // Fecha de expiracion opcional

  @@unique([routeId, invitedUserId])
  @@unique([routeId, invitedEmail])
}

// Suscripciones a notificaciones push
model PushSubscription {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  endpoint  String   @unique
  p256dh    String   // Key para encriptación
  auth      String   // Auth secret
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Contribuciones al bote comun
model PotContribution {
  id        String   @id @default(cuid())
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  routeId   String

  // Quien contribuye (puede ser usuario registrado o nombre)
  userId    String?
  userName  String?  // Para participantes no registrados

  amount    Float    // Cantidad aportada
  paidAt    DateTime @default(now())

  @@unique([routeId, userId])
}
